      "  private async loadData() {",
      "    let provider = Providers.globalProvider;",
      "",
      "    if (!provider || provider.state !== ProviderState.SignedIn) {",
      "      return;",
      "    }",
      "",
      "    // TODO: load data from the graph",
      "  }",
      "",
      "  static get styles() {",
      "    return css`",
      "      .root {",
      "        color: red;",
      "      }",
      "    `;",
      "  }",
      "",
      "  render() {",
      "    return html`",
      "      <div class='root'>",
      "        Hello ${this.myName}!$0",
      "      </div>",
      "    `;",
      "  }",
      "}"
    ],
    "description": "Create New Component"
  }
}
